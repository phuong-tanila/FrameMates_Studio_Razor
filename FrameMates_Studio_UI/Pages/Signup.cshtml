@page
@model FrameMates_Admin_UI.Pages.signupModel
@{
}
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="~/css/stylesignup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <header class="header">
        <h1><img src="../images/logoswd.png"><span>framemates</span></h1>
        <nav class="navbar">
            <div class="linked">
                <a href="#" class="active">Home</a>
                <a href="#">About</a>
                <a href="#">Service</a>
                <a href="#">Contact</a>
            </div>
        </nav>
    </header>
    <div class="background"></div>
    <div class="container_signup">
        <div class="box-signup">
            <div class="form-box signup">
                <form action="OTPPage">
                    <h2>Sign Up</h2>
                    <div class="input-box">
                        <input type="text" required>
                        <label>Full Name</label>
                    </div>
                    <div class="input-box">
                        <input type="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-box">
                        <input type="password" required>
                        <label>Password</label>
                    </div>
                    <div class="input-box">
                        <input type="password" required>
                        <label>Confirm Password</label>
                    </div>
                    <div class="input-box">
                        <input type="number" required>
                        <label>Phone Number</label>
                    </div>
                    <div class="input-box">
                        <input type="text" required>
                        <label>Address</label>
                    </div>
                    <button type="submit" class="btn">Sign Up</button>
                    <div class="register">
                        <p>You already have account?<a href="Login"> Sign In</a></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="content">

        </div>
    </div>
</body>
</html>