@page
@model FrameMates_Admin_UI.Pages.signupModel
@{
}
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="~/css/stylesignup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <header class="header">
        <h1><img src="../images/logoswd.png"><span>framemates</span></h1>
        <nav class="navbar">
            <div class="linked">
                <a href="#" class="active">Home</a>
                <a href="#">About</a>
                <a href="#">Service</a>
                <a href="#">Contact</a>
            </div>
        </nav>
    </header>
    <div class="background"></div>
    <div class="container_signup">
        <div class="box-signup">
            <div class="form-box signup">
                <form id="signUpForm" method="post">
                    <h2>Sign Up</h2>
                    <div class="input-box">
                        <input type="text" name="username" required>
                        <label>Username</label>
                    </div>
                    <div class="input-box">
                        <input type="text" name="fullname" required>
                        <label>Full Name</label>
                    </div>
                    <div class="input-box">
                        <input type="email" name="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-box">
                        <input type="password" name="password" required>
                        <label>Password</label>
                    </div>
                    <div class="input-box">
                        <input type="password" name="confirmPassword" required>
                        <label>Confirm Password</label>
                    </div>
                    <div class="input-box">
                        <input type="number" name="phoneNumber" required>
                        <label>Phone Number</label>
                    </div>
                    @*<div class="input-box">
                        <input type="text" name="address" required>
                        <label>Address</label>
                    </div>*@
                    <button type="submit" class="btn">Sign Up</button>
                    <div class="register">
                        <p>You already have account?<a href="Login"> Sign In</a></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="content">

        </div>
    </div>


    <script>
        $(document).ready(function () {
            $('#signUpForm').submit(function (event) {
                event.preventDefault();

                let username = $('input[name="username"]').val()
                let fullname = $('input[name="fullname"]').val()
                let email = $('input[name="email"]').val()
                let password = $('input[name="password"]').val()
                let confirmPassword = $('input[name="confirmPassword"]').val()
                let phoneNumber = $('input[name="phoneNumber"]').val()

                if (password !== confirmPassword) {
                    //return error
                    console.log("password and confirm password not match")
                    return
                }

                let data = {
                    accountModel: {
                        username: username,
                        fullName: fullname,
                        email: email,
                        avatar: 'https://12312',
                        phone: phoneNumber,
                        role: 'ROLE_CUSTOMER',
                        password: password
                    }
                };
                $.ajax({
                    url: '@Model.ApiDomain' + 'api/employees',
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        console.log(response);
                        window.location.href = '/login'
                    },
                    error: function (error) {
                        // Handle any errors that occur during the request
                        console.error(error);
                        // Display an error message to the user
                    }
                });
            });
        });
    </script>
</body>
</html>